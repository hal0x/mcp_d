# Memory MCP Server Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
MEMORY_MCP_DB_PATH=data/memory_graph.db

# Vector Store (Qdrant) - optional
MEMORY_MCP_QDRANT_URL=

# Embeddings Service - Priority 1
MEMORY_MCP_EMBEDDINGS_URL=

# LM Studio - Priority 2 (used if EMBEDDINGS_URL is not set)
MEMORY_MCP_LMSTUDIO_HOST=127.0.0.1
MEMORY_MCP_LMSTUDIO_PORT=1234
MEMORY_MCP_LMSTUDIO_MODEL=text-embedding-qwen3-embedding-0.6b

# Server Configuration
MEMORY_MCP_HOST=127.0.0.1
MEMORY_MCP_PORT=8000
MEMORY_MCP_TRANSPORT=stdio
MEMORY_MCP_LOG_LEVEL=INFO
MEMORY_MCP_DEBUG=false

# Paths
MEMORY_MCP_CHROMA_PATH=./chroma_db
MEMORY_MCP_CHATS_PATH=./chats
MEMORY_MCP_ARTIFACTS_PATH=./artifacts
MEMORY_MCP_INPUT_PATH=input

# Background Indexing
MEMORY_MCP_BACKGROUND_INDEXING_ENABLED=false
MEMORY_MCP_BACKGROUND_INDEXING_INTERVAL=60
